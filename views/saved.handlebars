<div class="container">
	<div class="row">
		<div class="section">
			{{#each article}}
			<div class="col s12 m4">
				{{#if saved}}
				<div class="card z-depth-1">
					<div class="card-image">
						<img src={{image}}>
							<a class="btn-floating  btn-large halfway-fab waves-effect waves-light black deleteArticle" data-id="{{_id}}"><i class="material-icons">delete</i></a>
					</div>
					<div class="card-content">
						<span class="card-title black-text">{{title}}</span>
						<p class='truncate'>{{summary}}</p>
					</div>
					<div class="card-action center-align">
						<a target="_blank" class="btn btn-large red darken-4 buttonPadding" href="https://www.cbc.ca{{link}}">Read
							Article</a>
						<a class="btn blue darken-2 btn-large activator buttonMargin" data-id="{{_id}}">Add Comment</a>	
					</div>
					{{/if}}
					<div class="card-reveal">
						<span class="card-title grey-text text-darken-4">{{title}}<i
								class="material-icons right">close</i></span>
						<form>
							<div class="input-field col s12">
								<textarea placeholder="Comment" id="content-data" class="materialize-textarea bodyInput"
									name="content"></textarea>
							</div>
							<button class="btn red darken-4 saveComment" type="submit">send</button>
							{{#if comments}}
							<br>
							<br>
							<a href='/comments/{{_id}}' class="grey-text text-darken-4 card-title">View Comments<i
									class="material-icons left">message</i></a>
							{{/if}}
						</form>
					</div>
				</div>
			</div>
			{{/each}}
		</div>
	</div>
</div>
