<div class="container">
	<div class="row">
		<div class="section">
			{{#each article}}
			<div class="col s12 m4">
				{{#if saved}}
				<div class="card">
					<div class="card-image">
						<img src="{{image}}">
						<div class="fixed-action-btn horizontal"
							style="position:relative; float:right; bottom:35px; right:10px">
							<a class="btn-floating btn-large red darken-4">
								<i class="large material-icons">menu</i>
							</a>
							<ul>
								<li><a class="btn-floating btn-large blue darken-2" id="deleteArticle" data-id="{{_id}}"><i class="material-icons" >delete</i></a></li>
								<li><a class="btn-floating blue darken-2 btn-large modal-trigger"
										data-target="modal1" data-id="{{_id}}"><i class=" material-icons"
											>comment</i></a>
								</li>
							</ul>
						</div>
					</div>
					<div class="card-content">
						<div class="card-title">{{title}}</div>
						<p>{{summary}}</p>
					</div>
					<div class="card-action">
						<a target="_blank" class="red-text text-darken-4" href="https://www.cbc.ca{{link}}">Link to
							article</a>
					</div>
				</div>
				{{/if}}
			</div>
			{{/each}}
		</div>
	</div>
</div>

<!--Modal-->
